  <script>
    // 年份
    document.getElementById('yy').textContent = new Date().getFullYear();

    // Hero 動態數字（示意）
    const anim = (el, to)=>{ let n=0, t=setInterval(()=>{ n+=Math.ceil(to/40); if(n>=to){n=to;clearInterval(t)} el.textContent=n },24)};
    anim(document.getElementById('n1'), 24);
    anim(document.getElementById('n2'), 18);
    anim(document.getElementById('n3'), 12);

    // 字級切換
    const fontCtl=document.getElementById('fontCtl');
    fontCtl.addEventListener('click',e=>{
      const f=e.target?.dataset?.f; if(!f)return;
      document.body.removeAttribute('data-font');
      if(f!=='md') document.body.setAttribute('data-font', f);
    });

    // 主題切換（auto→light→dark）
    const thCtl=document.getElementById('themeCtl');
    const seq=['auto','light','dark'];
    thCtl.addEventListener('click', ()=>{
      const cur=document.documentElement.getAttribute('data-theme')||'auto';
      const nxt=seq[(seq.indexOf(cur)+1)%seq.length];
      document.documentElement.setAttribute('data-theme',nxt);
      thCtl.textContent = '主題：' + (nxt==='auto'?'自動':(nxt==='light'?'淺色':'深色'));
    });
    thCtl.click(); // 初次標示狀態
  </script>
